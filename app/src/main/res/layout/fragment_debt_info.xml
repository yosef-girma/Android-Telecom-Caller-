<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.orit.com.caller.Fragment.Credit.DebtInfoFrag">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/debit_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="42dp"
        android:text="@string/debit_desc"
        android:textSize="18dp" />

    <Button
        android:id="@+id/check_debit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/debit_info"
        android:layout_marginTop="24dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="@string/check_debit"
        android:textColor="@android:color/white" />


</RelativeLayout>
