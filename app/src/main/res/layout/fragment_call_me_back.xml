<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.orit.com.caller.Fragment.Account.CallMeBackFrag">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/call_back_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="@string/call_back_desc" />

    <TextView
        android:id="@+id/call_back_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/call_back_desc"
        android:layout_alignStart="@+id/call_back_desc"
        android:layout_below="@+id/call_back_desc"
        android:layout_marginTop="16dp"
        android:text="@string/call_back_title" />


    <EditText
        android:id="@+id/call_back_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/call_back_title"
        android:layout_marginTop="32dp"
        android:drawableRight="@drawable/ic_contacts_black_24dp"
        android:layout_marginLeft="15dp"
        android:hint="@string/phone_number"
        android:paddingBottom="15dp" />

    <Button
        android:id="@+id/call_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/call_back_to"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="@string/call_me_back"
        android:textColor="@android:color/white" />


</RelativeLayout>
