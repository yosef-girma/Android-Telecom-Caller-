<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="app.orit.com.caller.Fragment.Pkg.PkgInternet">


    <HorizontalScrollView
        android:id="@+id/internet_grid_scoll"

        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:fillViewport="true"
        android:scrollbars="horizontal"
        android:scrollIndicators="bottom"
        >
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


           <android.support.v7.widget.RecyclerView
               android:id="@+id/pkgInternetRecycler"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_marginTop="15dp"
               android:padding="8dp" />

       </LinearLayout>

    </HorizontalScrollView>


    <GridView
        android:id="@+id/pkg_internet_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/internet_grid_scoll"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:horizontalSpacing="3dp"
        android:numColumns="2"
        android:verticalSpacing="5dp"


        />


</RelativeLayout>
